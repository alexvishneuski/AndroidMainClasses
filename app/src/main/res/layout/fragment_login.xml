        <EditText
            android:id="@+id/input_name_for_login_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:gravity="center_horizontal"
            android:hint="Phone, email or username"/>

        <EditText
            android:id="@+id/input_password_for_login_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:gravity="center_horizontal"
            android:hint="Password"/>


        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:text="Log in"/>

        <Button
            android:id="@+id/show_remind_password_panel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:text="Show remind password panel"/>
        <Button
            android:id="@+id/hide_remind_password_panel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:text="Hide remind password panel"/>

    <!--</LinearLayout>-->


</LinearLayout>