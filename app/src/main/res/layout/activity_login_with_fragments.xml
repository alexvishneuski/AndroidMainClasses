<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    tools:context="com.github.alexvishneuski.androidmainclasses.activities.LoginActivity">

    <LinearLayout
        android:id="@+id/log_in_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="10pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/log_in_linear_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:gravity="center_horizontal"
            android:text="Log in"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp"
            android:textStyle="bold" />

      <!--  <EditText
            android:id="@+id/input_name_for_login_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:gravity="center_horizontal"
            android:hint="Phone, email or username"></EditText>

        <EditText
            android:id="@+id/input_password_for_login_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:gravity="center_horizontal"
            android:hint="Password"></EditText>
-->

        <Button
            android:id="@+id/show_login_panel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:text="Show log in panel"></Button>




    </LinearLayout>

    <FrameLayout

        android:id="@+id/login_panel_frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    />
    <FrameLayout

        android:id="@+id/remind_password_panel_frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    />


</LinearLayout>